<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:layout_marginTop = "10dp"
    android:background="@drawable/ssubutton"
    android:textColor="@color/caldroid_white"
    tools:context="com.app.ssumobile.ssumobile_android.activity.calendarSingleEvent">
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="20dp"
        android:textStyle="bold"
        android:textColor="@color/caldroid_white"
        android:id="@+id/singleTitle"/>

<LinearLayout
    android:id="@+id/times"
    android:layout_below="@+id/singleTitle"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    >
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="15dp"
        android:textStyle="italic"
        android:layout_alignParentLeft="true"
        android:textColor="@color/caldroid_white"
        android:id="@+id/singleStartsOn"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/singleEndsOn"
        android:textSize="15dp"
        android:textStyle="italic"
        android:textColor="@color/caldroid_white"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/StartsOn"
        />

</LinearLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/singleLocation"
        android:textColor="@color/caldroid_white"
        android:layout_below="@+id/times"
        />


    <TextView
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:id="@+id/singleDescription"
    android:layout_below="@+id/singleLocation"
        android:textColor="@color/caldroid_white"
        />
</RelativeLayout>
